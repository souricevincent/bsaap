{% extends 'partials/base.html.twig' %}

{% block content %}

  <div class="uk-inline" uk-slider="autoplay: true">
    <ul class="uk-slider-items uk-child-width-1-3@s uk-child-width-1-4@ uk-grid-small">
      {% for reference in pages.find('/references').children|slice(0, 4) %}
        <li>
          {% include 'partials/card_reference.html.twig' with {'reference': reference} %}
        </li>
      {% endfor %}
    </ul>
    <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
    <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slider-item="next"></a>
    <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin"></ul>
  </div>

  <div class="uk-text-center uk-margin">
    <a class="uk-button uk-button-default" href="{{ pages.find('/references').url }}">Voir plus de {{ pages.find('/references').menu }}</a>
  </div>

  {{ page.content }}
{% endblock %}
